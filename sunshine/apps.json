{
    "env": {
        "PATH": "$(PATH):$(HOME)\/.local\/bin"
    },
    "apps": [
        {
            "name": "SunshinePC",
            "detached": [
                "setsid steam steam:\/\/open\/bigpicture"
            ],
            "prep-cmd": [
                {
                    "do": "hyprctl output create headless sunshine_pc",
                    "undo": "hyprctl output remove sunshine_pc"
                },
                {
                    "do": "hyprctl reload",
                    "undo": "hyprctl reload"
                },
                {
                    "do": "sh -c \"hyprctl keyword monitor sunshine_pc,${SUNSHINE_CLIENT_WIDTH}x${SUNSHINE_CLIENT_HEIGHT}@${SUNSHINE_CLIENT_FPS},0x0,1\"",
                    "undo": ""
                },
                {
                    "do": "hyprctl keyword monitor DP-1,disable",
                    "undo": "hyprctl dispatch focusmonitor DP-1"
                },
                {
                    "do": "hyprctl dispatch workspace 10",
                    "undo": "hyprctl dispatch workspace 1"
                }
            ],
            "wait-all": true
        },
        {
            "name": "SunshineDeck",
            "detached": [
                "setsid steam steam:\/\/open\/bigpicture"
            ],
            "prep-cmd": [
                {
                    "do": "hyprctl output create headless sunshine_deck",
                    "undo": "hyprctl output remove sunshine_deck"
                },
                {
                    "do": "hyprctl reload",
                    "undo": "hyprctl reload"
                },
                {
                    "do": "hyprctl keyword monitor DP-1,disable",
                    "undo": "hyprctl dispatch focusmonitor DP-1"
                },
                {
                    "do": "hyprctl dispatch workspace 10",
                    "undo": "hyprctl dispatch workspace 1"
                }
            ],
            "wait-all": true
        },
        {
            "name": "Desktop",
            "image-path": "desktop.png"
        },
        {
            "name": "Low Res Desktop",
            "image-path": "desktop.png",
            "prep-cmd": [
                {
                    "do": "xrandr --output HDMI-1 --mode 1920x1080",
                    "undo": "xrandr --output HDMI-1 --mode 1920x1200"
                }
            ]
        },
        {
            "name": "Steam Big Picture",
            "detached": [
                "setsid steam steam:\/\/open\/bigpicture"
            ],
            "image-path": "steam.png"
        }
    ]
}
