{
    "env": {
        "PATH": "$(PATH):$(HOME)\/.local\/bin"
    },
    "apps": [
        {
            "name": "Custom",
            "prep-cmd": [
                {
                    "do": "hyprctl output create headless test",
                    "undo": "hyprctl output remove test"
                },
                {
                    "do": "hyprctl dispatch focusmonitor test",
                    "undo": "hyprctl dispatch focusmonitor 0"
                },
                {
                    "do": "xrandr --output test --mode 1920x1080",
                    "undo": "xrandr --output test --mode 1920x1080"
                }
            ],
            "image-path": "steam.png"
        },
        {
            "name": "Desktop",
            "image-path": "desktop.png"
        },
        {
            "name": "Low Res Desktop",
            "image-path": "desktop.png",
            "prep-cmd": [
                {
                    "do": "xrandr --output HDMI-1 --mode 1920x1080",
                    "undo": "xrandr --output HDMI-1 --mode 1920x1200"
                }
            ]
        },
        {
            "name": "Steam Big Picture",
            "detached": [
                "setsid steam steam:\/\/open\/bigpicture"
            ],
            "image-path": "steam.png"
        }
    ]
}
